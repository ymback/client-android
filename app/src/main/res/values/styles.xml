        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!--<item name="colorAccent">@color/color_accent</item>-->

    </style>

    <style name="AppTheme.Base" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="singleAccount">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_ACCOUNTS</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="multipaneSupport">true</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->

    </style>

    <style name="AppTheme.Tab" parent="AppTheme.Base">
