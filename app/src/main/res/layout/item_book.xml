<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/book_card_cover"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="75dp" />
        <TextView
            android:id="@+id/book_card_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/book_card_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:paddingLeft="8dp" />
        <TextView
            android:id="@+id/_book_card_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_card_cover"
            android:layout_below="@id/book_card_name"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:text="作者:"/>
        <TextView
            android:id="@+id/book_card_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/_book_card_author"
            android:layout_below="@id/book_card_name"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp" />
        <TextView
            android:id="@+id/_book_card_illustrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_card_cover"
            android:layout_below="@id/_book_card_author"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:text="插画:"/>
        <TextView
            android:id="@+id/book_card_illustrator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/_book_card_illustrator"
            android:layout_below="@id/_book_card_author"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp" />
        <TextView
            android:id="@+id/_book_card_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_card_cover"
            android:layout_below="@id/_book_card_illustrator"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:text="出版社:"/>
        <TextView
            android:id="@+id/book_card_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/_book_card_publisher"
            android:layout_below="@id/_book_card_illustrator"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="8dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
